{
  "info": {
    "name": "Event Ticket Booking - Demo",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "adminUser", "value": "admin" },
    { "key": "adminPass", "value": "password123" },
    { "key": "adminBasic", "value": "Basic YWRtaW46cGFzc3dvcmQxMjM=" },
    { "key": "authHeader", "value": "{{adminBasic}}" },
    { "key": "exampleEventId", "value": "<replace_with_id>" },
    { "key": "exampleUserEmail", "value": "user@example.com" }
  ],
  "item": [
    {
      "name": "Create Event (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authHeader}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"TechFest 2025\",\n  \"venue\": \"Lagos Tech Arena\",\n  \"date\": \"2025-09-10T10:00:00Z\",\n  \"totalTickets\": 50\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events/initialize",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "events",
            "initialize"
          ]
        }
      }
    },
    {
      "name": "Create Event (Admin) - with creds",
      "request": {
        "method": "POST",
        "auth": { "type": "basic", "basic": [ { "key": "username", "value": "{{adminUser}}" }, { "key": "password", "value": "{{adminPass}}" } ] },
        "body": { "mode": "raw", "raw": "{\n  \"title\": \"Demo Event\",\n  \"venue\": \"Local Hall\",\n  \"date\": \"2025-12-01T10:00:00Z\",\n  \"totalTickets\": 3\n}" },
        "url": { "raw": "{{baseUrl}}/api/events/initialize", "host": [ "{{baseUrl}}" ], "path": [ "api", "events", "initialize" ] }
      }
    },
    {
      "name": "Book Ticket",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"eventId\": \"{{exampleEventId}}\",\n  \"userEmail\": \"{{exampleUserEmail}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events/book",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "events",
            "book"
          ]
        }
      }
    },
    {
      "name": "Book Ticket (by userId)",
      "request": {
        "method": "POST",
        "body": { "mode": "raw", "raw": "{\n  \"eventId\": \"{{exampleEventId}}\",\n  \"userId\": \"demo_user_1\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/events/book", "host": [ "{{baseUrl}}" ], "path": [ "api", "events", "book" ] }
      }
    },
    {
      "name": "Cancel Booking",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"eventId\": \"{{exampleEventId}}\",\n  \"userEmail\": \"{{exampleUserEmail}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events/cancel",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "events",
            "cancel"
          ]
        }
      }
    },
    {
      "name": "Get Status",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/events/status/{{exampleEventId}}",
          "host": [ "{{baseUrl}}" ],
          "path": [ "api", "events", "status", "{{exampleEventId}}" ]
        }
      }
    },
    {
      "name": "Demo: fill seats and waitlist",
      "request": {
        "method": "POST",
        "body": { "mode": "raw", "raw": "{\n  \"eventId\": \"{{exampleEventId}}\",\n  \"userId\": \"bulk_user_{{rand}}\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/events/book", "host": [ "{{baseUrl}}" ], "path": [ "api", "events", "book" ] }
      },
      "event": [ { "listen": "prerequest", "script": { "exec": [ "pm.environment.set('rand', Math.floor(Math.random()*100000))" ], "type": "text/javascript" } } ]
    }
  ]
}